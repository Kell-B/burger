<h1>Meals!</h1>

<h2>Meals waiting to be devoured!</h2>

<ul>
  {{#each meals}}
  {{#unless devoured}}
  <li>
    {{name}}

    <button class="change-meal" data-id="{{id}}" data-newmeal="true">
      Devour it!
    </button>

    <button class="delete-meal" data-id="{{this.id}}">DELETE!</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Meals!</h2>

<ul>
  {{#each meals}}
  {{#if devoured}}
  <li>
    {{name}}

    <button class="change-meal" data-id="{{id}}" data-newmeal="false">
      Cook again!
    </button>

    <button class="delete-meal" data-id="{{this.id}}">DELETE!</button>
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Meal</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Meal Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Meal</button>
</form>